<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group row mt-2">
    <%= f.label :email, class: "col-3 mx-auto" %>
    <div class="col-5 mx-auto">
      <%= f.email_field :email, autocomplete: "email", class: "form-control",:placeholder => "(例)example@gmail.com" %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <%= f.label :password, class: "col-3 mx-auto" %>
    <div class="col-5 mx-auto">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control",:placeholder => "パスワードは６文字以上" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>
  </div>

  <div class="form-group row mt-2">
    <%= f.label :password_confirmation, class: "col-3 mx-auto" %>
    <div class="col-5 mx-auto">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",:placeholder => "確認のためもう一度入力してください" %>
    </div>
  </div>

  <div class="form-group row col-md-6 offset-md-3 mt-5">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
